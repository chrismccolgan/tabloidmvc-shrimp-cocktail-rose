@model TabloidMVC.Models.Category

@{
    ViewData["Title"] = "Delete";
}

<div class="container pt-5">
     <div class="row justify-content-center">
         <div class="card col-md-12 col-lg-8">
             <h3 class="mt-3 text-primary text-center card-title">Are you sure you want to delete @(Model.Name)?</h3>
             <p class="text-secondary text-center">All posts associated within this category will be moved to "Other".</p>

             <div class="form-group">
                 <form asp-action="Delete">
                     <input type="submit" value="Delete" class="btn btn-primary btn-block" />
                     <a asp-action="Index" class="btn btn-secondary btn-block">Cancel</a>
                 </form>
             </div>
         </div>
    </div>
</div>