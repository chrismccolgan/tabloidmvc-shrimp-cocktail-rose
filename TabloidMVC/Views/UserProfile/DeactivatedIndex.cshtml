@model IEnumerable<TabloidMVC.Models.UserProfile>

@{
    ViewData["Title"] = "DeactivatedIndex";
}

<div class="container pt-5">

    <h1>Deactivated Users</h1>
    <span style="padding-right:2em;"><a class="btn btn-outline-dark btn-sm mx-1" asp-route-id="" asp-area="" asp-controller="UserProfile" asp-action="Index">Active Users</a></span>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.FullName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DisplayName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UserTypeId)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FullName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DisplayName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserType.Name)
                    </td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-primary mx-1" title="View">
                            <i class="fas fa-eye"></i>
                        </a>
                        <a asp-action="Reactivate" asp-route-id="@item.Id" class="btn btn-outline-primary mx-1" title="Reactivate">
                            <i class="fas fa-pencil-alt"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>