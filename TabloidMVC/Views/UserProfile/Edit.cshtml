@model TabloidMVC.Models.ViewModels.UserProfileEditViewModel

@{
    ViewData["Title"] = "Edit";
}


<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="UserProfile.Id" type="hidden" class="form-control" />
            </div>
            <div class="form-group">
                <input asp-for="UserProfile.FirstName" type="hidden" class="form-control" />
            </div>
            <div class="form-group">
                <input asp-for="UserProfile.LastName" type="hidden" class="form-control" />
            </div>
            <div class="form-group">
                <input asp-for="UserProfile.DisplayName" type="hidden" class="form-control" />
            </div>
            <div class="form-group">
                <input asp-for="UserProfile.Email" type="hidden" class="form-control" />
            </div>
            <div class="form-group">
                <input asp-for="UserProfile.CreateDateTime" type="hidden" class="form-control" />
            </div>
            <div class="form-group">
                <input asp-for="UserProfile.ImageLocation" type="hidden" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="UserProfile.UserTypeId" class="control-label"></label>
                <select asp-for="UserProfile.UserTypeId" class="form-control">
                    <option value="">Select User Type</option>
                    @foreach (UserType userType in Model.UserTypes)
                    {
                        <option value="@userType.Id">@userType.Name</option>
                    }
                </select>
                <span asp-validation-for="UserProfile.UserTypeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="UserProfile.IsDeactivated" type="hidden" class="form-control" />
            </div>
            <div class="form-group">
                <input asp-for="UserProfile.FullName" type="hidden" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
